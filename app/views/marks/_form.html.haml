= form_for @mark do |f|
  -if @mark.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mark.errors.count, "error")} prohibited this mark from being saved:"
      %ul
        - @mark.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :adjudicator_id
    = f.number_field :adjudicator_id
  .field
    = f.label :round_id
    = f.number_field :round_id
  .field
    = f.label :couple_id
    = f.number_field :couple_id
  .field
    = f.label :placement
    = f.number_field :placement
  .actions
    = f.submit 'Save'
