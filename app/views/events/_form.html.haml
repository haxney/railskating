= form_for @event, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :competition_id, :class => 'control-label'
    .controls
      = f.text_field :competition_id, :class => 'text_field'
  .control-group
    = f.label :level_id, :class => 'control-label'
    .controls
      = f.text_field :level_id, :class => 'text_field'
  .control-group
    = f.label :number, :class => 'control-label'
    .controls
      = f.text_field :number, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), events_path, :class => 'btn'
